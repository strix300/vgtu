#include <stdlib.h>
#include <locale.h>
#include <stdio.h>
#include <math.h>
#include <string.h>
#define _USE_MATH_DEFINES
//_CRT_SECURE_NO_DEPRECATE//

void proc1()
{
	int i1=0;
	char Name[40], Snew[40] = "Hello";
	scanf("%s", Name);
	strcat(Snew, Name);
	while (Snew[i1] != 0) i1++;
	printf("%d\n", i1);
	printf("%s\n", Snew);
	for (i1; i1 < 40; i1++)
	{
		Snew[i1] = '!';
	}
	printf("%s\n", Snew);
}
int main()
{
	setlocale(LC_ALL, "RUS");
	proc1();
}
