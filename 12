#include <stdlib.h>
#include <locale.h>
#include <stdio.h>
#include <math.h>
#define _USE_MATH_DEFINES
#define N 10
//_CRT_SECURE_NO_DEPRECATE//

void proc1()
{
	int i = 5, *pi=&i;
	float f = 2.1f, *pf = &f;
	char  c = 'a', *cf = &c;
	double d = 2.2, *df = &d;
	printf("%lu\n", sizeof(pi));
	printf("%lu\n", sizeof(pf));
	printf("%lu\n", sizeof(cf));
	printf("%lu\n", sizeof(df));
}
int main()
{
	setlocale(LC_ALL, "RUS");
	proc1();
}
