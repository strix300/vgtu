#define _CRT_SECURE_NO_DEPRECATE
#define _USE_MATH_DEFINES
#include <math.h>
#include <stdlib.h>
#include <locale.h>
#include <stdio.h>
#include <math.h>
#include <string.h>
#define SIZE 20

void proc1()
{
	FILE* file = fopen("tablica.txt", "r");
	float table[20][4];
	int i,count=100,k=0;
	char c;
	char name[20];
	count = count / 5;
	for (int i = 0; i < count; i++)
	{
			fgets(name, SIZE, file);
			printf("%s", name);
			fscanf(file, "%f\n", &table[i][k]);
			printf("%f\n", table[i][k]);
			fscanf(file, "%f\n", &table[i][k+1]);
			printf("%f\n", table[i][k+1]);
			fscanf(file, "%f\n", &table[i][k+2]);
			printf("%f\n", table[i][k+2]);
			fscanf(file, "%f\n", &table[i][k+3]);
			printf("%f\n", table[i][k+3]);
	}
	printf("введите 1 для вывода вида спорта\nвведите 2 для выводав результатов указнанного участника\nвведите 3 для вывода таблицы\n");
	scanf("%c", &c);
	switch (c)
	{
	case '1':
		printf("Спортивное ориентирование");
		break;
	case '2':
		printf("...");
		break;
	case '3':
		printf("Фамилия   1 этап    2 этап    3 этап    4 этап    общее время   место\n");
		for (i = 0; i < 20; i++)
		{
			printf("%d", i);
			for (k = 0; k < 4; k++)
			{
				printf("     %5.1f", table[i][k]);
			}
			printf("\n");
		}
		break;
	case '4':
		break;
	}
}
int main()
{
	setlocale(LC_ALL, "RUS");
	proc1();
}
