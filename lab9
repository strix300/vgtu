#include <stdlib.h>
#include <locale.h>
#include <stdio.h>
#include <math.h>
#define _USE_MATH_DEFINES
#define ROW 0
#define COL 0
#define ROW1 0
#define COL1 0
#define COL2 30
void proc1a()
{
	int row, col;
	printf("\n");
	for (row = 8; row > ROW; --row)
	{
		for (col = 9; col > COL + row; --col)
		printf("%5d", col * row);
		printf("\n");
	}
	system("pause");
}
void proc1b()
{
	int n, m = 1, count = 0;
	for (n = 30; n >= 26; n++)
	{
		count++;
		printf("%5d", n);
		if (count == m)
		{
			printf("\n");
			n =n-(m + 1);
			m++;
			count = 0;
		}
	}
	return 0;
}
int main()
{
	setlocale(LC_ALL, "RUS");
	proc1b();
}
